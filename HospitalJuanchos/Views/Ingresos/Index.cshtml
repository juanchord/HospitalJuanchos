@model IEnumerable<HospitalJuanchos.Models.Ingresos>

@{
    ViewBag.Title = "Hospital Juanchos - Ingresos";
}


<p>
    <a href="@Url.Action("Create", "Ingresos")" class="btn btn-success myBtn">Crear Nuevo Ingreso</a>
    <button onclick="SacandoPDF()" class="btn btn-danger myBtn">Imprimir</button>

</p>
@using (Html.BeginForm("Index", "Ingresos", FormMethod.Post))
{
    <div class="between">
        @Html.TextBox("busqueda", "", new { @class = "form-control mb-2", placeholder = "Buscar..." })
        <br />
        <select name="select" class="form-control col col-lg-2">
            <option value="">Elige una opcion</option>
            <option value="Fecha_De_Ingreso">Fecha</option>
            <option value="Num_Hab">Numero de Habitacion</option>

        </select>

        <div class="col-2">
            <button type="submit" class="btn btn-success">Buscar</button>
        </div>
    </div>
}
<br />
<br />
<div id="IDSacar"
     <h4>Listado de Ingresos</h4>
<table class="table" id="IDSacar">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Habitacion.Numero_Hab)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.Nombre_Pac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_De_Ingreso)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Habitacion.Numero_Hab)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Nombre_Pac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_De_Ingreso)
            </td>

        </tr>
    }

</table>

    </div>
<div>
    <a href="@Url.Action("Procesos", "Home")" class="btn btn-warning myBtn">Atras</a>
</div>

