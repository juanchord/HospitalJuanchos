@model HospitalJuanchos.Models.Ingresos

@{
    ViewBag.Title = "Hospital Juanchos - Crear Ingreso";
}

<h2>Crear Ingreso</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ingresos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ID_Habitacion, "ID_Habitacion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_Habitacion", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Habitacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_Paciente, "ID_Paciente", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_Paciente", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Paciente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha_De_Ingreso, htmlAttributes: new { @class = "control-label col-md-2", Type = "Date" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha_De_Ingreso, new { htmlAttributes = new { @class = "form-control", Type = "Date" } })
                @Html.ValidationMessageFor(model => model.Fecha_De_Ingreso, "", new { @class = "text-danger", Type = "Date" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atras", "Index")
</div>
