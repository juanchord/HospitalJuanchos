@model IEnumerable<HospitalJuanchos.Models.Habitaciones>

@{
    ViewBag.Title = "Hospital Juanchos - Lista de Habitaciones";
}


<p>
    <a href="@Url.Action("Create", "Habitaciones")" class="btn btn-success myBtn">Crear Nueva Habitacion</a>
    <button onclick="SacandoPDF()" class="btn btn-danger myBtn">Imprimir</button>
</p>
 @using (Html.BeginForm("Index", "Habitaciones", FormMethod.Post))
 {
<div>
    <button class="btn btn-primary" name="select" value="Doble">Doble</button>
    <button class="btn btn-danger" name="select" value="Privada">Privada</button>
    <button class="btn btn-success" name="select" value="Suite">Suite</button>
</div>
 }
<div id="IDSacar"
      <h4>
        Listado de Habitaciones
     </h4>
<table class="table" id="IDSacar">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero_Hab)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo_Hab)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numero_Hab)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_Hab)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td class="btn btn-primary myBtn">
            @Html.ActionLink("Editar", "Edit", new { id = item.ID_Habitacion })
        </td>
        <td class="btn btn-danger myBtn">
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Habitacion })
        </td>
        <td class="btn btn-success myBtn">
            @Html.ActionLink("Detalles", "Details", new { id = item.ID_Habitacion })
        </td>
    </tr>
    }

</table>
    </div>
<div>
    <a href="@Url.Action("Mantenimiento", "Home")" class="btn btn-warning myBtn">Atras</a>
</div>
