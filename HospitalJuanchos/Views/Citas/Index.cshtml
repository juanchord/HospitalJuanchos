@model IEnumerable<HospitalJuanchos.Models.Citas>

@{
    ViewBag.Title = "Hospital Juanchos - Citas Medicas";
}

<h2>Lista de Citas Medicas</h2>

<p>
    <a href="@Url.Action("Create", "Citas")" class="btn btn-success myBtn">Crear Nueva Cita Medicaa</a>
    <button onclick="SacandoPDF()" class="btn btn-danger myBtn">Imprimir</button>

</p>
@using (Html.BeginForm("Index", "Citas", FormMethod.Post))
{
    <div class="between">
        @Html.TextBox("busqueda", "", new { @class = "form-control mb-2", placeholder = "Buscar..." })
        <br />
        <select name="select" class="form-control col col-lg-2">
            <option value="">Elige una opcion</option>
            <option value="Nombre_Pac">Nombre de Paciente</option>
            <option value="Nombre_Med">Nombre de Medico</option>
            <option value="Fechad_De_Cita">Fecha de Cita</option>

        </select>

        <div class="col-2">
            <button type="submit" class="btn btn-success">Buscar</button>
        </div>
    </div>
}
<br />
<br />
<div id="IDSacar"
      <h4>
        Listado de Citas
     </h4>
<table class="table" id="IDSacar">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Medico.Nombre_Med)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.Nombre_Pac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_De_Cita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora_De_Cita)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Medico.Nombre_Med)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Nombre_Pac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_De_Cita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora_De_Cita)
            </td>


        </tr>
    }

</table>
    </div>
<div>
    <a href="@Url.Action("Procesos", "Home")" class="btn btn-warning myBtn">Atras</a>
</div>

