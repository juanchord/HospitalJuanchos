@model HospitalJuanchos.Models.Citas

@{
    ViewBag.Title = "Hospital Juanchos - Crear Cita Medica";
}

<h2>Crear Cita Medica</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ID_Paciente, "ID_Paciente", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_Paciente", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Paciente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha_De_Cita, htmlAttributes: new { @class = "control-label col-md-2", Type = "Date" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha_De_Cita, new { htmlAttributes = new { @class = "form-control", Type = "Date" } })
                @Html.ValidationMessageFor(model => model.Fecha_De_Cita, "", new { @class = "text-danger", Type = "Date" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Hora_De_Cita, htmlAttributes: new { @class = "control-label col-md-2", Type = "Time" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hora_De_Cita, new { htmlAttributes = new { @class = "form-control", Type = "Time" } })
                @Html.ValidationMessageFor(model => model.Hora_De_Cita, "", new { @class = "text-danger", Type = "Time" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_Medico, "ID_Medico", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_Medico", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Medico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-success myBtn" />
            </div>
        </div>
    </div>
}
<div>
    <a href="@Url.Action("Index", "Citas")" class="btn btn-warning myBtn">Atras</a>
</div>

