@model IEnumerable<HospitalJuanchos.Models.Altas>

@{
    ViewBag.Title = "Hospital Juanchos - Alta Medica";
}

<h2>Lista de Altas</h2>
<p>
    <a href="@Url.Action("Create", "Altas")" class="btn btn-success myBtn">Crear Nueva Alta Medica</a>
    <a href="@Url.Action("Imprimir", "Altas")" class="btn btn-danger myBtn">Convertir a PDF</a>
</p>
@using (Html.BeginForm("Index", "Altas", FormMethod.Post))
{
    <div class="between">
        @Html.TextBox("busqueda", "", new { @class = "form-control mb-2", placeholder = "Buscar..." })
        <br />
        <select name="select" class="form-control col col-lg-2">
            <option value="">Elige una opcion</option>
            <option value="Paciente">Nombre de Paciente</option>
            <option value="Fecha">Fecha</option>

        </select>

        <div class="col-2">
            <button type="submit" class="btn btn-success">Buscar</button>
            <input type="submit" class="btn btn-primary" name="activo" value="Sumatoria" placeholder="Sumatoria"/>
        </div>
    </div>
}
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ingresos.ID_Ingresos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_De_Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_De_Ingreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_De_Salida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Habitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ingresos.ID_Ingresos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_De_Paciente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_De_Ingreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_De_Salida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Habitacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td class="btn btn-danger myBtn">
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_ALtas })
        </td>

    </tr>
    }

</table>
<h3>Sumatoria de precios:</h3>
<span>@ViewBag.total</span>
